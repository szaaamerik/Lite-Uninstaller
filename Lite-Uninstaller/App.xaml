<Application x:Class="Lite_Uninstaller.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:helpers="clr-namespace:Lite_Uninstaller.Helpers"
             Startup="App_OnStartup"
             Exit="App_OnExit"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            
            <helpers:OffsetConverter x:Key="OffsetConverter"/>
            <helpers:DivideConverter x:Key="DivideConverter"/>
            <helpers:BoolConverter x:Key="BoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
